{% extends 'base.html.twig' %}

{% block title %}Accueil {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class=" container  ">
    <div class="row">
        <h1 class="text-center">Bienvenue !</h1>
        <h2 class="text-center bg-info">Liste des gîtes</h2>

        <ul class="d-flex flex-row flex-wrap">
        {% for gite in gites %}
                <li class="m-2 p-2">
                    <strong>{{ gite.nom }}</strong> 
                    <br>
                    Adresse: {{ gite.adresse.voie }}, {{ gite.adresse.codePostal }} {{ gite.adresse.ville }}
                    <br>
                    Propriétaire : {{ gite.proprietaire.nom }} 
                    <br>
                    téléphone :{{ gite.proprietaire.telephone }}
                    <br>
                    Animaux acceptés : {{ gite.animauxAcceptes ? 'Oui' : 'Non' }}
                </li>
            {% endfor %}
        </ul>
    </div>
</div>
{% endblock %}
